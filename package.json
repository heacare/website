{
  "name": "hea-website",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Happily-Ever-After-Corp/website.git"
  },
  "bugs": {
    "url": "https://github.com/Happily-Ever-After-Corp/website/issues"
  },
  "homepage": "https://github.com/Happily-Ever-After-Corp/website#readme",
  "scripts": {
    "format": "prettier --write . !resources/_gen"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.2",
    "postcss": "^8.4.8",
    "postcss-cli": "^9.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-reuse": "^2.1.9",
    "prettier": "^2.5.1",
    "prettier-plugin-go-template": "^0.0.11",
    "tailwindcss": "^3.0.23"
  },
  "postcss": {
    "plugins": {
      "tailwindcss": {
        "content": [
          "./{content,layouts}/**/*.{html,css,md}"
        ],
        "theme": {
          "extend": {}
        },
        "plugins": []
      },
      "autoprefixer": {}
    }
  },
  "prettier": {
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "go-template"
        }
      }
    ]
  }
}
