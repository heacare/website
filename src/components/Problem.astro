---
import Row from './Row.astro';
import Column from './Column.astro';

const { heading, content } = Astro.props;
---

<Row>
	<Column padding="0 2rem">
		<h1>{heading}</h1>
	</Column>
	<Column padding="0 2rem" justifyCenter>
		<p>{content}</p>
	</Column>
</Row>

<style>
	h1 {
		margin-top: 6rem;
		margin-bottom: 6rem;
		margin-right: 6rem;
	}

	p {
		font-size: var(--font-scale-md);
	}
</style>
