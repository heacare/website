---
import Row from "./Row.astro";
import Column from "./Column.astro";
import SvgIcon from "./SvgIcon.astro";

const { heading, icon } = Astro.props;
---

<Row>
  <Column padding="6rem 4rem 6rem 2rem" collapsedPadding="6rem 4rem 1rem 2rem">
    <SvgIcon icon={icon} height="3em" margin="1rem 0" />
    <h1>{heading}</h1>
  </Column>
  <Column
    padding="1rem 2rem"
    collapsedPadding="1rem 2rem 4rem"
    flex="1.3"
    justifyCenter
  >
    <div class="content">
      <slot />
    </div>
  </Column>
</Row>

<style>
  h1 {
    margin: 1rem 0;
  }

  .content {
    font-size: var(--font-scale-md);
  }
</style>
