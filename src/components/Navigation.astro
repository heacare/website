---
import Logo from './Logo.astro';

const links = [
	{
		text: "Blog",
		href: "https://mirror.xyz/blog.heacare.eth",
	},
	{
		text: "Twitter",
		href: "https://twitter.com/hea_care",
	},
];
---

<nav>
	<Logo height="3rem" />
	<ul>
		{links.map(link => (
			<li><a href={link.href} target="_blank">{link.text}</a></li>
		))}
	</ul>
</nav>

<style>
	:root {
		--spacing: 1rem;
		--gap: 2rem;
	}

	nav {
		/* Layout */
		padding: var(--spacing) 0;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: var(--gap);
	}

	ul {
		/* Reset */
		list-style: none;
		margin: 0;
		padding: 0;
		/* Layout */
		display: flex;
		gap: var(--gap);
	}

	a {
		/* Layout */
		display: block;
		/* Shape */
		border-radius: 0.75em;
		/* Text style */
		color: inherit;
		text-decoration: none;
		text-transform: uppercase;
		font-weight: 600;
		/* Transitions */
		transition: 0.5s filter;
		/* Increase click target */
		padding: calc(var(--gap) / 2);
		margin: calc(var(--gap) / -2);
	}

	a:hover {
		color: #434343;
		background: white;
	}
</style>
