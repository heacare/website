---
import SvgImage from "./SvgImage.astro";
import SvgIcon from "./SvgIcon.astro";

import { blogLink, wikiLink, twitterLink, discordLink } from "../config.ts";

const links = [
  {
    text: "Blog",
    href: blogLink,
  },
  {
    text: "Wiki",
    href: wikiLink,
  },
];
---

<nav>
  <a href="/">
    <SvgImage image="logo" height="2.5em" scale="1.3" />
  </a>
  <ul>
    {
      links.map((link) => {
        if (link.icon) {
          return (
            <li>
              <a href={link.href} target="_blank">
                <SvgIcon icon={link.icon} height="1.2em" />
              </a>
            </li>
          );
        }
        return (
          <li>
            <a href={link.href} target="_blank">
              {link.text}
            </a>
          </li>
        );
      })
    }
  </ul>
</nav>

<style>
  nav {
    --spacing: 1rem;
    --gap: 2rem;
  }

  nav {
    /* Layout */
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--gap);
    /* Color */
    color: var(--color-navigation);
    /* Ensure navigation icons don't have extra space */
    line-height: 1;
  }
  @media screen and (max-width: 420px) {
    nav {
      font-size: 0.8em;
    }
  }

  ul {
    /* Reset */
    list-style: none;
    margin: 0;
    padding: 0;
    /* Layout */
    display: flex;
    align-items: center;
    gap: var(--gap);
  }

  a {
    /* Text style */
    color: inherit;
    text-decoration: none;
    text-transform: uppercase;
    font-weight: 600;
  }

  li a {
    /* Layout */
    display: block;
    /* Shape */
    border-radius: 0.75em;
    /* Increase click target */
    padding: calc(var(--gap) / 2);
    margin: calc(var(--gap) / -2);
  }

  li a:hover {
    background: var(--color-button-background);
  }
</style>
