---
import Row from './Row.astro';
import Column from './Column.astro';
import Button from './Button.astro';
import SvgIcon from './SvgIcon.astro';

const { icon, anchor, heading, subheading, blog, github } = Astro.props;
---

<Row>
	<Column>
		<div class="inner">
			<span class="top-right">
				<SvgIcon icon={icon} height="1.5em" />
			</span>
			<h1><a id={anchor}></a>{heading}</h1>
			<h4>{subheading}</h4>
			<slot />
			<p class="actions">
				{blog ? (
				<Button href={blog} target="_blank">Read more &#10140;</Button>
				) : null}
				{github ? (
				<Button href={github} target="_blank">GitHub &#10140;</Button>
				) : null}
			</p>
		</div>
	</Column>
</Row>

<style>
	.inner {
		padding: 0 2rem;
		margin: 2rem 0;
	}

	.top-right {
		float: right;
	}

	.actions {
		display: flex;
		gap: 1rem;
		flex-flow: wrap;
	}
</style>
