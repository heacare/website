---
import SvgImage from "./SvgImage.astro";
import SvgIcon from "./SvgIcon.astro";

import {
  blogLink,
  wikiLink,
  newsletterLink,
  twitterLink,
  instagramLink,
  discordLink,
  githubLink,
} from "../config.ts";

const links = [
  {
    text: "Blog",
    href: blogLink,
  },
  {
    text: "Wiki",
    href: wikiLink,
  },
];

const socials = [
  {
    text: "Twitter",
    icon: "twitter",
    href: twitterLink,
  },
  {
    text: "Instagram",
    icon: "instagram",
    href: instagramLink,
  },
  {
    text: "GitHub",
    icon: "github",
    href: githubLink,
  },
];
---

<footer>
  <div class="inner">
    <div class="main">
      <SvgImage image="logo" height="2.5em" scale="1.3" />
      <p>
        For any enquiries, reach out to
        <a href="mailto:hello@hea.care">hello@hea.care</a>
      </p>
    </div>
    <div class="links">
      <h4>Discover</h4>
      <ul>
        {
          links.map((link) => (
            <li>
              <a href={link.href} target="_blank">
                {link.text}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
    <div class="socials">
      <h4>Social</h4>
      <div class="socials-buttons">
        {
          socials.map((social) => (
            <a href={social.href} target="_blank" title={social.text}>
              <SvgIcon icon={social.icon} height="1.7em" />
            </a>
          ))
        }
      </div>
    </div>
  </div>

  <style>
    a {
      color: inherit;
    }

    footer {
      padding: 4rem var(--gap-sides);
    }

    footer .inner {
      /* Layout */
      display: flex;
      justify-content: space-between;
      flex-wrap: wrap;
      gap: var(--gap-section-vertical) var(--gap-section);
      /* Color */
      color: var(--color-navigation);
      /* Font */
      font-size: var(--font-scale-navigation);

      /* Limit width */
      max-width: var(--width-md);
      margin: 0 auto;
    }

    h4,
    p,
    ul li {
      margin: 0.6em 0;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    .socials-buttons a {
      display: inline-block;
      text-decoration: none;
      margin-right: 0.5454em;
    }
    .socials-buttons a:last-child {
      margin-right: 0;
    }

    .main {
      max-width: 12em;
    }
    @media screen and (max-width: 640px) {
      .main {
        max-width: none;
        width: 100%;
      }
    }

    /*
    .main {
      flex: 2;
    }
    .links {
      flex: 1;
    }
    .socials {
      flex: 1;
    }
	*/
  </style>
</footer>
