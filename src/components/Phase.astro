---
import SvgIcon from "./SvgIcon.astro";

const { icon, counter, heading, subheading } = Astro.props;
---

<div>
  <div class="inner">
    <span class="counter">{counter}</span>
    <div class="details">
      <h2>
        <SvgIcon icon={icon} height="0.9em" margin="1rem 0" />
        {heading}
      </h2>
      <p>{subheading}</p>
    </div>
  </div>
</div>

<style>
  .inner {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .counter {
    font-size: 5em;
    font-family: "DM Serif Display", serif;
    margin-right: 6rem;
  }
  @media screen and (max-width: 720px) {
    .counter {
      margin-right: 4rem;
    }
  }
  @media screen and (max-width: 480px) {
    .counter {
      margin-right: 2rem;
    }
  }

  .details {
    flex-basis: 24rem;
  }

  h2,
  p {
    margin: 1rem 0;
  }
</style>
