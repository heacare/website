---
import Navigation from './Navigation.astro';
import color from '../videos/color.mp4';
---

<div class="wrapper">
	<video class="background" autoplay muted loop playsinline>
		<source src={color} type="video/mp4">
	</video>

	<div class="navigation">
		<Navigation />
	</div>
	<section class="content">
		<div class="header">
			<h1>We believe in Universal Preventative Healthcare</h1>
		</div>
		<div>
			<h2>Second header</h2>
		</div>
		<div>
			<button>Call to action</button>
		</div>
	</section>
</div>

<style>
	.wrapper {
		/* Allow the background to be absolutely positioned */
		position: relative;
		/* Force the hero to cover the whole page */
		min-height: 100vh;
		/* Text style */
		color: white;
	}

	.background {
		/* Position the background behind the content and navigation */
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -100;
		/* Scale the background to cover instead of fitting */
		object-fit: cover;
	}

	.navigation {
		/* Layout */
		padding: 1rem 2rem;
	}

	.content {
		/* Layout */
		margin: 0rem 2rem;
		/* Text style */
		font-size: 2em;
		/* Grid */
		display: grid;
		gap: 2px;
		grid-template-columns: repeat(2, 1fr);
	}

	.content > * {
		/* Layout */
		padding: 0rem 1rem;
		/* Box */
		outline: 2px solid white;
	}

	.content > .header {
		grid-column: 1 / 3;
	}
</style>
