---
import { siteName } from '../config.ts';

export interface Props {
	title: string;
}

const { pageTitle, title, description, image } = Astro.props as Props;
const { default: imageUrl } = await import(`../images/${image}.jpg`);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width,initial-scale=1.0" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<link rel="icon" type="image/gif" href="/favicon.gif" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
		<meta name="description" content={description} />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@hea_care" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={imageUrl} />
		<meta property="og:site_name" content={siteName} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Source+Sans+Pro:wght@400;700&display=swap">
	</head>
	<body>
		<slot />
	</body>
</html>
<style>
	:root {
		--base-scale: 100%;
		--font-scale-root: 1.2em;

		--font-scale-md: 1.2em;
		--font-scale-lg: 1.5em;
		--font-scale-xl: 2.3em;
		--font-scale-2xl: 3em;
		--font-scale-hero: 5em;
	}
	@media screen and (max-width: 820px) {
		:root {
			--base-scale: 90%;

			--font-scale-hero: 4em;
		}
	}
	@media screen and (max-width: 480px) {
		:root {
			--base-scale: 80%;

			--font-scale-hero: 3.5em;
		}
	}

	:root {
		--width-md: 60rem;
		--width-lg: 80rem;

		--color-content: var(--color-darkgray);
		--color-content-subtle: rgba(67, 67, 67, 0.2);
		--color-inverse: white;

		--color-darkgray: #434343; /* 800 */
		--color-lightgray: #CCCCCC; /* 350 */
		--color-pink: #FF00FF; /* A400 */
		--color-orange: #FF9900; /* A400 */
		--color-video: #F29979;

		--row-thickness: 2px;
		--row-border: var(--row-thickness) solid currentColor;
	}

	:global(*), :global(*:before), :global(*:after) {
		box-sizing: border-box;
	}

	html {
		/* Set up a nice default sans-serif font stack */
		font-family: "Source Sans Pro", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", "Noto Sans", "Liberation Sans", Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji";
		font-size: var(--base-scale);
		-webkit-font-smoothing: antialiased;
	}

	body {
		margin: 0;
		font-size: var(--font-scale-root);
		color: var(--color-darkgray);
	}

	:global(h1) {
		font-size: var(--font-scale-xl);
		font-family: 'DM Serif Display', serif;
		font-weight: 400;
		line-height: 1.1;
	}

	:global(h2) {
		font-size: var(--font-scale-lg);
		font-family: 'DM Serif Display', serif;
		font-weight: 400;
		line-height: 1.1;
	}

	:global(code) {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
