---
import { siteName } from "../config.ts";

export interface Props {
  title: string;
}

const { pageTitle, title, description, image } = Astro.props as Props;
const { default: imageUrl } = await import(`../images/${image}.jpg`);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1.0" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <link rel="icon" type="image/gif" href="/favicon.gif" />
    <meta name="generator" content={Astro.generator} />
    <title>{pageTitle}</title>
    <meta name="description" content={description} />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@hea_care" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={imageUrl} />
    <meta property="og:site_name" content={siteName} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Source+Sans+Pro:wght@400;700&display=swap"
    />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-Z5F4GPGPX4"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-Z5F4GPGPX4");
    </script>
  </head>
  <body>
    <slot />
    <style>
      :root {
        --base-scale: 100%;

        --font-family-sans-serif: "Source Sans Pro", system-ui, -apple-system,
          "Segoe UI", Roboto, "Helvetica Neue", "Noto Sans", "Liberation Sans",
          Arial, sans-serif, "Apple Color Emoji", "Segoe UI Emoji",
          "Segoe UI Symbol", "Noto Color Emoji";
        --font-family-serif: "DM Serif Display", serif;
        --font-family-hero: var(--font-family-serif);
        --font-family-heading: var(--font-family-serif);
        --font-family-heading-2: var(--font-family-serif);

        --font-line-height: 1.3;
        --font-line-height-hero: 1.1;
        --font-line-height-heading: 1.2;
        --font-line-height-heading-2: 1.2;

        --font-weight-hero: 400;
        --font-weight-heading: 400;
        --font-weight-heading-2: 400;
        --font-weight-button: 600;

        --font-scale-hero: 4.875rem;
        --font-scale-heading: 3.25rem;
        --font-scale-heading-2: 2rem;
        --font-scale-heading-3: 1.375rem;
        --font-scale-body: 1.375rem;
        --font-scale-body-2: 1rem;
        --font-scale-caption: 0.75rem;
        --font-scale-quote: 1.625rem;
        --font-scale-button: 1.125rem;
        --font-scale-navigation: 1.25rem;
      }
      @media screen and (max-width: 820px) {
        :root {
          --base-scale: 95%;

          --font-scale-hero: 4.2rem;
        }
      }
      @media screen and (max-width: 480px) {
        :root {
          --base-scale: 85%;

          --font-scale-hero: 3.25rem;
        }
      }

      :root {
        --width-sm: 48rem;
        --width-md: 60rem;
        --width-lg: 70rem;

		--gap-vertical: 2rem;
        --gap-sides: 4rem;
        --gap-actions: 2rem;
        --gap-actions-vertical: 1rem;
      }
      @media screen and (max-width: 820px) {
        :root {
          --gap-sides: 2rem;
        }
      }

      :root {
        --color-background: #ffffff;
        --color-background-gradient: linear-gradient(
          104.29deg,
          rgba(255, 176, 57, 0.1) 17.32%,
          rgba(255, 90, 255, 0.1) 89.26%
        );
        --color-gradient-dense: linear-gradient(
          95.09deg,
          #ff5aff 6.51%,
          #ff5aff 19.62%,
          #ffbba0 25.99%,
          #ffb039 33.27%,
          #ff5aff 51.48%,
          #ff98ac 62.4%,
          #ffb039 73.32%,
          #ff5aff 93.9%
        );
        --color-gradient-simple: linear-gradient(
          104.29deg,
          #ffb039 17.32%,
          #ff5aff 89.26%
        );
        --color-gradient-simple-2: linear-gradient(
            0deg,
            rgba(255, 255, 255, 0.66),
            rgba(255, 255, 255, 0.66)
          ),
          linear-gradient(20.09deg, #ffb039 12.82%, #ff5aff 95.69%);
        --color-navigation: #555555;
        --color-button: var(--color-content);
        --color-button-inverted: var(--color-content-inverted);
        --color-button-background: rgba(34, 34, 34, 0.1);
        --color-button-background-inverted: rgba(255, 255, 255, 0.1);
        --color-button-inverted: var(--color-content-inverted);
        --color-content: #222222;
        --color-content-inverted: #ffffff;
        --color-subtle: rgba(0, 0, 0, 0.05);
      }

      :global(*),
      :global(*:before),
      :global(*:after) {
        box-sizing: border-box;
      }

      html {
        /* Set up a nice default sans-serif font stack */
        font-family: var(--font-family-sans-serif);
        font-size: var(--base-scale);
        -webkit-font-smoothing: antialiased;
      }

      body {
        margin: 0;

        font-size: var(--font-scale-body);
        line-height: var(--font-line-height);

        color: var(--color-content);
      }

      :global(h1) {
        margin: 0.6154em 0;
        padding: 0.1em 0; /* Ensure all text is within the box */

        font-size: var(--font-scale-heading);
        font-family: var(--font-family-heading);
        font-weight: var(--font-weight-heading);
        line-height: var(--font-line-height-heading);

        background: var(--color-gradient-simple);
        background-clip: text;
        -webkit-background-clip: text;
        color: transparent;
      }

      :global(h2) {
        margin: 1em 0;

        font-size: var(--font-scale-heading-2);
        font-family: var(--font-family-heading-2);
        font-weight: var(--font-weight-heading-2);
        line-height: var(--font-line-height-heading-2);
      }

      :global(p),
      :global(ul),
      :global(ol) {
        margin: 0.5454em 0;
      }

      :global(code) {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }
    </style>
  </body>
</html>
